{
  "name": "family-erp",
  "description": "Laravel Todo List Application",
  "runtime": "php",
  "php_version": "8.3",
  "build": {
    "commands": [
      "composer install --optimize-autoloader --no-dev --no-interaction",
      "pnpm install",
      "pnpm run build"
    ]
  },
  "start": {
    "command": "php artisan serve --host=0.0.0.0 --port=8000"
  },
  "environment": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_LEVEL": "error"
  },
  "database": {
    "type": "mysql",
    "version": "8.4"
  }
}
